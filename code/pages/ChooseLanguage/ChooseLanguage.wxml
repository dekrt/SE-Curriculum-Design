<!--pages/ChooseLanguage/ChooseLanguage.wxml-->
<view class="flex-col page">
  <view class="flex-col flex-auto group_2 space-y-24">
    <view class="flex-row section_3 space-x-8">
      <van-cell-group>
  <van-field
    left-icon="language_search_icon"
    value="{{ message }}"
    type="textarea"
    placeholder="请输入..."
    autosize
    border="{{ false }}"
  />
</van-cell-group>
    </view>
    <view class="flex-col space-y-20">
      <text class="self-start font_2 text_5">最近使用过的语言</text>
      <view class="flex-col space-y-16">
        <view
          class="flex-row justify-between items-center section_4"
          wx:key="*this"
          wx:for-item="item"
          wx:for-index="i"
          wx:for="{{list_n11zgJQ7}}"
        >
          <view class="flex-row items-center space-x-24">
            <image
              class="shrink-0 image_4"
              src="../../images/language/中文.png"
            />
            <text class="font_2 text_6">中文</text>
          </view>
        </view>
      </view>
    </view>
    <view class="flex-col space-y-20">
      <text class="self-start font_2 text_8">全部语言</text>
      <view class="flex-col space-y-16">
        <view
          class="flex-row justify-between items-center list-item"
          wx:key="*this"
          wx:for-item="item"
          wx:for-index="i"
          wx:for="{{list_zVRepQ2F}}"
        >
          <view class="flex-row space-x-24">
            <image
              class="shrink-0 image_4"
              src="../../images/language/意大利.png"
            />
            <text class="self-start font_3 text_9">意大利</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>