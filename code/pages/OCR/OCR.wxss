.container {
  /* margin-top: 150rpx; */
  text-align: center;
}

.head{
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 200rpx;
    background-color: #1493FC;
}

.back-icon {
  position: absolute;
  top: 50px;
  left: 20px;
  z-index:1;
  background-color: #1493fc;
}

.arrow-icon {
  width: 30px;
  height: 30px;
}

.btn {
  background-color: #1493fc;
  padding: 15rpx 20rpx;
  color: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
}


.item {
  margin-top: 40rpx;
  padding: 0 10rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0px 0px 2rpx #0000000a, 0px 0px 4rpx #0000000f, 0px 8rpx 16rpx #0000000a;
}

.item .query {
  padding: 20rpx;
  border-bottom: solid 2rpx #e7e7e7;
  font-size: 32rpx;
  font-family: Poppins;
  line-height: 50rpx;
  color: #1e3163;
}
.item .query .language{
    font-size: 28rpx;
    font-family: Poppins;
    line-height: 26rpx;
    color: #a8abb0;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.item .result {
  margin-top: 16rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-family: Poppins;
  line-height: 50rpx;
  color: #1e3163;
}

.item .result .language{
  font-size: 28rpx;
  font-family: Poppins;
  line-height: 26rpx;
  color: #909dbd;
  margin-bottom: 10rpx;
}

image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: bottom;
}
