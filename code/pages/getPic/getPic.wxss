.head{
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-color: #1493FC;
}

.btn {
  background-color: #1493fc;
  width: 200rpx;
  padding: 15rpx 20rpx;
  color: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
  text-align: center;
}
.toolbar{
  display: flex;
  width: auto;
  height: 100rpx;
  justify-content: center;
  align-items: center;
}

.shot{
    width: 110rpx;
    height: 110rpx;
    text-align: center;
    margin-top: 50rpx;
}
image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: bottom;
}

.language{
  display: flex;
  padding-top: 100rpx;
  width: 300rpx;
  padding-left: 80rpx;
  vertical-align: bottom;
}

.language_pic{
  padding-top: 25rpx;
  vertical-align: text-bottom;
}

.language_text{
  padding-top: 20rpx;
  font-size: 30rpx;
  font-family: Poppins;
  line-height: 26rpx;
  color: #ffffff;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
  font-family: Poppins;
  line-height: 22rpx;
}
.switch{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
  border-radius: 16rpx;
  width: 72rpx;
  height: 72rpx;
  margin: auto;
}